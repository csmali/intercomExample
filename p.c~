/* shm2.c */
#include <stdio.h>
#include <string.h>
#include <sys/types.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#define SHM_KEY_VALUE 1234567
int main(void)
{
	char *padr;
	char *x;
	char eoline='\n';
	int shmid;
	int shmid2;
	int length=0;
	int i=0;
	int sesli;
	FILE *file;
	file=fopen("sesliharfler.out","w");
	if ((shmid = shmget(SHM_KEY_VALUE, 0, 0666)) < 0) {
		perror("shmget");
		exit(1);
	}
	if ((padr = (char *) shmat(shmid, NULL, 0)) == (void *) -1) {
		perror("shmat");
		exit(1);
	}
	if ((shmid2 = shmget(SHM_KEY_VALUE, 0, 0444)) < 0) {
		perror("shmget");
		exit(1);
	}
	if ((x = (char *) shmat(shmid2, NULL, 100)) == (void *) -1) {
		perror("shmat");
		exit(1);
	}
	while(1){
		if(strcmp(padr,"quit")==0){
			break;		
		}
		if(*(padr+1000) == 'w'){
			sesli=0;
			puts(padr);
			*(x+1000)='r';
			length=strlen(padr);
			for(i=0;i<length;i++){
				fputc(padr[i],file);
				if(padr[i]=='a'||padr[i]=='e'||padr[i]=='i'||padr[i]=='u'||padr[i]=='o')
					sesli++;
			}
			fprintf(file,"%d",sesli);
			fprintf(file,"%c",eoline);
		}
		
		//sleep(1);
		 
	}
	puts(padr);
	*padr = 'q';
	shmdt(padr);
	fclose(file);
	return 0;
}
